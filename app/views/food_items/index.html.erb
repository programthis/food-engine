<div class="formContainer left">
	<%= form_tag foods_path, method: :get do %>
		<%= text_field_tag 'term', params[:term], placeholder: "Enter food name or category" %>
		<%= submit_tag 'Search!' %>
	<% end %>
</div>

<div class="currentInventory">
	<h1>
		Current Inventory
	</h1>
	<% current_user.food_items.each do |food_item| %>
		<div class="foodItem">
			<div class="imageContainer">
				<% if food_item.food.image.attached? %>
					<%= image_tag(food_item.food.image) %>
				<% end %>
			</div>
			<div>
				<%= food_item.food.name %>
			</div>
			<div>
				Quantity: <%= food_item.quantity %>
			</div>
			<div>
				Weight (mg): <%= number_with_precision(food_item.weight_in_mg, precision: 2) %>
			</div>
		</div>
	<% end %>
</div>

<div class="formContainer">
	<h1>Add to current inventory:</h1>
	<%= form_for @food_item do |form| %>
		<div>
			<%= form.collection_select :food_id, @foods, :id, :name, {prompt: "Select a food"}, required: true %>
		</div>
		<div>
			<%= form.label :quantity %>
	    	<%= form.number_field :quantity %>
	    </div>
	    <div>
			<%= form.label :weight_in_mg %>
	    	<%= form.number_field :weight_in_mg, step: "0.01" %>
	    </div>
	    <div>
	    	<%= form.submit "Save" %>
	    </div>
	<% end %>
</div>