
<% current_user.food_items.each do |food_item| %>
	<%= food_item %>
<% end %>

<div class="formContainer">
	<h1>Add to current inventory:</h1>
	<%= form_for @food_item do |form| %>
		<div>
			<%= form.collection_select :id, @foods, :id, :name, {prompt: "Select a food"} %>
		</div>
		<div>
			<%= form.label :quantity %>
	    	<%= form.number_field :quantity %>
	    </div>
	    <div>
			<%= form.label :weight %>
	    	<%= form.text_field :weight, step: "0.01" %>
	    </div>
	    <div>
	    	<%= form.submit "Save" %>
	    </div>
	<% end %>
</div>